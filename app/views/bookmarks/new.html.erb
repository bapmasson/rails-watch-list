<div class="home" style="background-image: url('https://res.cloudinary.com/daytskqjn/image/upload/v1750261130/kxeco0fjbays5xtubhm2.jpg');">
  <div class="container">
    <h1>Add a Movie to <%= @list.name %></h1>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.button :submit, "Add movie", class: "btn btn-danger button" %>
      <%= link_to "Back", list_path(@list), class:"btn btn-danger button" %>
    <% end %>

  </div>

</div>
