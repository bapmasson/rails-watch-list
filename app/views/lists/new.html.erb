<div class="home" style="background-image: url('https://res.cloudinary.com/daytskqjn/image/upload/v1750261130/kxeco0fjbays5xtubhm2.jpg');">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="text-center">Create a list</h1>
      <div class="col-6">
        <%= simple_form_for (@list) do |f| %>
          <%= f.input :name, class: "form-input" %>
          <%= f.input :photo, as: :file, class: "form-input" %>
          <%= f.button :submit, "Create List", class: "btn btn-danger button" %>
        <% end %>

      </div>

    </div>
  </div>
</div>
