<div class="show-list" style="background-image: url('<%= cl_image_path @list.photo.key %>');">

  <div class="container">

    <div class="row justify-content-around align-items-center">
      <div class="col-4 mt-4 ml-3">
        <h1><%= @list.name %></h1>
      </div>
      <div class="col-3 mt-4">
        <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-danger button" %>

      </div>
    </div>

    <div class="row justify-content-between">
      <% @list.bookmarks.each do |bookmark| %>

        <div class="col-12 col-lg-6 my-3">

          <div class="card-main card-movie" style="background-image: url('<%= bookmark.movie.poster_url %>');">

            <div class="d-flex justify-content-between">
              <h2><%= bookmark.movie.title %></h2>
              <p class="align-self-center"><%= bookmark.movie.rating %> ‚≠ê</p>
            </div>

            <h3><%= bookmark.movie.overview %></h3>

            <div class="d-flex justify-content-between">
              <p class="p-quote"><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %> <i class="fa-solid fa-quote-right"></i></p>
              <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Delete #{bookmark.movie.title} from the #{@list.name} list ?"} do %>
                <i class="fa-solid fa-trash-can"></i>
              <% end %>
            </div>

          </div>

        </div>

      <% end %>
    </div>
  </div>

</div>
